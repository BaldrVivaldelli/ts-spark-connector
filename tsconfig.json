{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "declaration": true,            // ✅ Necesario para generar .d.ts
    "declarationMap": true,         // (opcional) Mapas de los .d.ts
    "emitDeclarationOnly": false,   // ✅ Emite JS + .d.ts
    "outDir": "dist",               // ✅ Salida lista para publicar
    "rootDir": "src",               // Asume que tu código fuente está en src/
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],               // ✅ Asegura que compile solo lo necesario
  "exclude": ["node_modules", "dist", "**/*.test.ts"]  // ✅ Excluye tests y build previa
}
